# Required: Your HaloPSA instance URL (e.g. https://halo.yourcompany.co.uk)
HALOPSA_BASE_URL=

# Required: Your HaloPSA tenant name
HALOPSA_TENANT=

# Required: OAuth2 Client ID from HaloPSA API application
HALOPSA_CLIENT_ID=

# Required: OAuth2 Client Secret from HaloPSA API application
HALOPSA_CLIENT_SECRET=

# Optional: Auth server URL (defaults to HALOPSA_BASE_URL/auth)
# HALOPSA_AUTH_URL=

# Optional: OAuth2 scope (defaults to "all")
# HALOPSA_SCOPE=all

# Optional: Request timeout in milliseconds (defaults to 30000)
# HALOPSA_TIMEOUT_MS=30000
